<RadzenStack>
	<!-- #region Toolbar -->
	<RadzenRow Gap="8">
		<RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Add" Click="@Add" />
		@* <RadzenButton ButtonStyle="ButtonStyle.Danger" Text="Delete" Click="@Delete"  /> *@
	</RadzenRow>
	<RadzenRow>
		<FormFieldDatePicker Label="Date" Name="Date" @bind-Value="@filter.Date"
			Change="@(async () => await dataGrid.Reload())" />
	</RadzenRow>
	<!-- #endregion -->

	<!-- #region List Data -->
	<DataGrid @ref=@dataGrid TItem="FormTransactionModel" LoadData="LoadData" AllowSelected="false">
		<RadzenDataGridColumn TItem="FormTransactionModel" Property="SysGeneralSubCodeFormType" Title="Form Type"
			Width="30%" TextAlign="TextAlign.Center">
			<Template Context="row">
				<RadzenLink Path="@($"/transaction/{Link}/" + row.ID)" Text="@row.SysGeneralSubCodeFormType" />
			</Template>
		</RadzenDataGridColumn>
		<RadzenDataGridColumn TItem="FormTransactionModel" Property="SysGeneralSubCodeFinanceCompanyType"
			Title="Company Type" Width="40%" />
		<RadzenDataGridColumn TItem="FormTransactionModel" Property="Date" Title="Date" Width="30%"
			TextAlign="TextAlign.Center">
			<Template Context="row">
				@(row.Date?.ToString("dd/MM/yyyy"))
			</Template>
		</RadzenDataGridColumn>
	</DataGrid>
	<!-- #endregion -->

</RadzenStack>